@using MvcApplication2.Models;
@model Person

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="container" style="margin-top: 50px;">
        <div class="jumbotron">
            <form method="POST" action="/home/edit">
                <input type="hidden" name="personId" value="@Model.Id"/>
                <input type="text" value="@Model.FirstName" class="input-lg form-group" name="firstName" placeholder="First Name"/>
                <input type="text" value="@Model.LastName" class="input-lg form-group" name="lastName" placeholder="Last Name"/>
                <input type="text" value="@Model.Age" class="input-lg form-group" name="age" placeholder="Age"/>
                <button class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>